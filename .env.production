# BRMH Auth UI Production Environment Variables
# Copy this file to .env and update the values

# Backend API URL
API_BASE_URL=https://brmh.in

# Domain configuration
DOMAIN=auth.brmh.in
BACKEND_DOMAIN=brmh.in

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/brmh.in.crt
SSL_KEY_PATH=/etc/ssl/private/brmh.in.key

# Nginx Configuration
NGINX_USER=www-data
NGINX_GROUP=www-data
NGINX_SITES_AVAILABLE=/etc/nginx/sites-available
NGINX_SITES_ENABLED=/etc/nginx/sites-enabled

# Deployment Configuration
DEPLOY_USER=ubuntu
DEPLOY_HOST=your-server.com
DEPLOY_PATH=/var/www/brmh-auth-ui

# Docker Configuration (if using Docker)
DOCKER_IMAGE_NAME=brmh-auth-ui
DOCKER_CONTAINER_NAME=brmh-auth-ui
DOCKER_NETWORK=brmh-network

# Security Configuration
CORS_ORIGIN=https://auth.brmh.in
SECURE_COOKIES=true
SAME_SITE_COOKIES=None

# Monitoring
HEALTH_CHECK_ENDPOINT=/health
LOG_LEVEL=info
